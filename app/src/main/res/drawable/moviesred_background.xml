<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient android:endColor="@color/colorMovieRed" android:startColor="@color/colorMovieRed" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:endColor="@color/colorMoviePressRed" android:startColor="@color/colorMoviePressRed" />
            <corners android:radius="5dp" />
        </shape>
    </item>


</selector>